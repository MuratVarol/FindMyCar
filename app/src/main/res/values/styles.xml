<resources>

    <!--  Button  -->
    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:background">@drawable/bg_secondary_button</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Button.Light">
        <item name="android:background">@drawable/bg_light_button</item>
        <item name="android:textColor">@color/orange</item>
    </style>


    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="android:background">@drawable/bg_text_input</item>
    </style>


    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/hint_text_size</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textColor">#ff0000</item>
        <item name="android:textSize">@dimen/error_text_size</item>
    </style>

    <!--  TextView  -->
    <style name="TextField" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextField.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextField.Medium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextField.Big">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="TextField.Header" parent="TextField.Big">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="TextField.Header.Black" parent="TextField.Header">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextField.Popup">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/popup_text_size</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="TextField.List_ModelName" parent="TextField.Big">
        <item name="android:fontFamily">@font/nunito_extrabold</item>
        <item name="fontFamily">@font/nunito_extrabold</item>
    </style>

    <style name="TextField.List_Small" parent="TextField.Small">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="InputFieldText" parent="android:Widget.EditText">
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:cursorVisible">true</item>
    </style>

    <style name="InputFieldText.SingleLine">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">@dimen/margin_small</item>
    </style>


    <!--  EDITTEXT  -->
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="EditText.PopupInput">
        <item name="android:textSize">@dimen/popup_text_size</item>
    </style>

    <!--  CARDVIEW  -->
    <style name="CardView.ListItem">
        <item name="cardCornerRadius">@dimen/radius_big</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">false</item>
    </style>

    <style name="CardView.Floating" parent="CardView.ListItem">
        <item name="cardCornerRadius">@dimen/radius_medium</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/tab_text_size</item>
        <item name="android:textColor">@color/tab_passive</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/opaque_dark</item>
        <item name="tabIndicatorHeight">@dimen/margin_small</item>
        <item name="tabPaddingStart">@dimen/margin_small</item>
        <item name="tabPaddingEnd">@dimen/margin_small</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>


    <style name="AppTabLayout.Switcher">
        <item name="tabMaxWidth">0dp</item>
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="AppTabTextAppearance.Switcher">
        <item name="android:textSize">@dimen/text_size_tab_cars</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="fontFamily">@font/nunito_semibold</item>
    </style>

</resources>
